<h1>New Event</h1>

<%= form_for [@organization, @event] do |f| %>
	<p>
		<%= f.label :when %>
		<%= f.date_select :when %>
	</p>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :vip %>
		<%= f.select :vip_id, options_for_select(@organization.vips.all.map {|v| [v.name, v.id]}) %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>